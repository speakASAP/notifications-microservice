# Service Configuration
DOMAIN=
SERVICE_NAME=
PORT=
NODE_ENV=
CORS_ORIGIN=

# Auth (admin panel: JWT validation + browser login URL)
# AUTH_SERVICE_URL = internal URL for backend (e.g. http://auth-microservice:3370)
# AUTH_SERVICE_PUBLIC_URL = public URL for frontend login (e.g. https://auth.statex.cz)
AUTH_SERVICE_URL=
AUTH_SERVICE_PUBLIC_URL=

# Database Configuration (using same database server as flipflop)
DB_HOST=
DB_PORT=
DB_USER=
DB_PASSWORD=
DB_NAME=
DB_SYNC=

# SendGrid Configuration
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=
SENDGRID_FROM_NAME=

# =============================================================================
# TELEGRAM CONFIGURATION
# =============================================================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_BOT_USERNAME=
TELEGRAM_CHAT_ID=
TELEGRAM_API_URL=

# =============================================================================
# WHATSAPP CONFIGURATION
# =============================================================================
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_BUSINESS_ACCOUNT_ID=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_VERIFY_TOKEN=
WHATSAPP_API_URL=

# Logging Configuration
LOG_LEVEL=
LOGGING_SERVICE_URL=

# =============================================================================
# EMAIL PROVIDER CONFIGURATION
# =============================================================================
# Email Provider Selection (sendgrid|ses|auto)
# - sendgrid: Use SendGrid only
# - ses: Use AWS SES only
# - auto: Try AWS SES first, fallback to SendGrid on failure
EMAIL_PROVIDER=

# =============================================================================
# AWS SES CONFIGURATION
# =============================================================================
# AWS SES Region (e.g., eu-central-1)
AWS_SES_REGION=
# AWS SES Access Key ID
AWS_SES_ACCESS_KEY_ID=
# AWS SES Secret Access Key
AWS_SES_SECRET_ACCESS_KEY=
# AWS SES From Email (fallback to SENDGRID_FROM_EMAIL if not set)
AWS_SES_FROM_EMAIL=
# AWS SES From Name (fallback to SENDGRID_FROM_NAME if not set)
AWS_SES_FROM_NAME=
# AWS SES SNS Topic ARN for inbound email webhook (optional)
AWS_SES_SNS_TOPIC_ARN=
# AWS SES S3 Bucket for inbound email storage (optional, used as fallback if not in notification)
AWS_SES_S3_BUCKET=
# AWS SES S3 Object Key Prefix (optional, e.g., "forwards/" or "emails/")
AWS_SES_S3_OBJECT_KEY_PREFIX=
# S3 unprocessed catchup cron (optional, default: */5 * * * * = every 5 min)
S3_CATCHUP_CRON=
# S3 catchup max emails per run (optional, default: 10, max: 100)
S3_CATCHUP_MAX_KEYS_PER_RUN=
# Helpdesk webhook URL (optional)
HELPDESK_WEBHOOK_URL=
# Email forwarding rules JSON, e.g. '{"recipient@domain": "forward@domain"}' (use single quotes)
EMAIL_FORWARDING_RULES=
# Email to notify when webhook delivery times out (default: ssfskype@gmail.com)
WEBHOOK_TIMEOUT_ALERT_EMAIL=